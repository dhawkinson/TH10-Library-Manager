.card#book-form
    h2 New/Update Book
    form(action=`${ bookDetail ? `/${ entity }/${ book.id }/${ book.title.replace(/ /g, '_') }` : `/${entity}/new` }`, method="post")
        p.input-set
            label(for='title') Title
            input#title(type='text')
        p.input-set
            label(for='author') Author
            input#author(type='text')
        p.input-set
            label(for='genre') Genre
            input#genre(type='text')
        p.input-set
            label(for='first_published') First Published
            input#first_published(type='text')
        p
            input(type='submit', value='Save Book')
    include ./_error